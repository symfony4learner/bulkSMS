<form method="post" action="{{ path('grp_delete', {'id': grp.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ grp.id) }}">
    <button class="btn">Delete</button>
</form>