{% extends 'base.html.twig' %}

{% block title %}Groups List{% endblock %}

{% block body %}
    <h1>Groups List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Admins</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grp in grps %}
            <tr>
                <td>{{ grp.id }}</td>
                <td>{{ grp.title }}</td>
                <td>{{ grp.admins }}</td>
                <td>
                    <a href="{{ path('grp_show', {'id': grp.id}) }}">show</a>
                    <a href="{{ path('grp_edit', {'id': grp.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<hr />

    <a href="{{ path('grp_new') }}">Create new</a>
{% endblock %}